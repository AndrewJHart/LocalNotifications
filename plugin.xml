<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android"
    id="com.phonegap.plugins.localnotification"
    version="1.0.0">

    <name>Local Notification</name>

    <asset src="www/LocalNotification.js" target="LocalNotification.js" />

    <!-- android -->
    <platform name="android">
        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <activity android:name="com.phonegap.plugins.localnotification.LocalNotification"
                      android:label="@string/app_name">
                <intent-filter>
                </intent-filter>
            </activity>
        </config-file>

        <!-- Cordova 1.5 - 1.9 -->
        <config-file target="res/xml/plugins.xml" parent="/plugins">
            <plugin name="LocalNotification"
                value="com.phonegap.plugins.localnotification.LocalNotification"/>
        </config-file>

        <!-- Cordova 2.0.0 -->
        <config-file target="res/xml/config.xml" parent="/cordova/plugins">
            <plugin name="LocalNotification"
                value="com.phonegap.plugins.localnotification.LocalNotification"/>
        </config-file>

        <source-file src="src/android/com/phonegap/plugin/localnotification/AlarmHelper.java"
                target-dir="src/com/phonegap/plugins/localnotification" />
        <source-file src="src/android/com/phonegap/plugin/localnotification/AlarmOptions.java"
                target-dir="src/com/phonegap/plugins/localnotification" />
        <source-file src="src/android/com/phonegap/plugin/localnotification/AlarmReceiver.java"
                target-dir="src/com/phonegap/plugins/localnotification" />
        <source-file src="src/android/com/phonegap/plugin/localnotification/AlarmRestoreOnBoot.java"
                target-dir="src/com/phonegap/plugins/localnotification" />
        <source-file src="src/android/com/phonegap/plugin/localnotification/LocalNotification.java"
                target-dir="src/com/phonegap/plugins/localnotification" />
    </platform>

    <!-- ios -->
    <platform name="ios">
        <plugins-plist key="LocalNotification"
                    string="LocalNotification" />

        <header-file src="LocalNotification.h" />
        <source-file src="LocalNotification.m" />
    </platform>
</plugin>
